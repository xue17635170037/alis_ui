<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/buttonBackground">
        <shape
            android:shape="rectangle">

            <solid
                android:color="#00ffffff">
            </solid>

            <corners
                android:radius="2dp">
            </corners>
        </shape>

    </item>
    <item
        android:left="15dp"
        android:right="15dp"
        android:bottom="5dp"
        android:top="5dp"
        android:gravity="center"
        android:id="@+id/buttonImage"
        android:drawable="@drawable/ic_slide_btn_arrow"/>
</layer-list>
